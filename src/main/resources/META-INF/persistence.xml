<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="inventario-mysql-PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.inventario.entidades.Ambiente</class>
    <class>com.inventario.entidades.Bien</class>
    <class>com.inventario.entidades.Campo</class>
    <class>com.inventario.entidades.Clase</class>
    <class>com.inventario.entidades.Codigo</class>
    <class>com.inventario.entidades.CtaCtb</class>
    <class>com.inventario.entidades.Documento</class>
    <class>com.inventario.entidades.DocumentoDetalle</class>
    <class>com.inventario.entidades.Inventario</class>
    <class>com.inventario.entidades.Movimiento</class>
    <class>com.inventario.entidades.Proveedor</class>
    <class>com.inventario.entidades.Relbiencampo</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/inventario?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
